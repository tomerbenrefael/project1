@model IEnumerable<project1.Models.Employee1>

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="search">

</div>
<p>
    <nav class="navbar navbar-light bg-light">
        @using (Html.BeginForm("HomePage", "Employee", FormMethod.Get, new { CssClassPropertyAttribute = "form-inline" }))
        {
            <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        }
    </nav>

</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartWorkYear)
                </th>
                <th>
                    Department Name
                </th>
                <th>Actions</th>
                <th>Shifts</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartWorkYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { empID = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { empId = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Add Shift", "AddShiftToEmployee", "Shift", new { empID = item.ID },null)
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No employees found!
    </div>
}
